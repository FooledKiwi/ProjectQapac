<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProjectQapacApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/darkModeContent</item>
        <item name="colorOnSurface">@color/bone</item>
        <item name="colorSurface">#2B2930</item>
        <item name="colorOnSurfaceVariant">@color/gray</item>
        <item name="colorPrimary">@color/magenta_light</item>
        <item name="colorOnPrimary">@color/purple</item>
        <item name="colorSecondary">@color/yellow</item>
        <item name="materialButtonStyle">@style/AppButton1</item>
        <item name="editTextStyle">@style/EditText1</item>
    </style>

    <style name="ProfilePassenger">
        <item name="android:src">@drawable/passenger_version_two_white</item>
    </style>

    <style name="CardBackgroundTint" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/purple</item>
    </style>

    <style name="textUsername">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/lightGray</item>
    </style>

    <style name="TextHourMinutesSeconds">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="EditText1" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_rounded_all</item>
        <item name="backgroundTint">@color/white</item>
        <item name="textFillColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
</resources>