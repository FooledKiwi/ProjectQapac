<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProjectQapacApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="materialButtonStyle">@style/AppButton1</item>
    </style>

    <style name="AppButton1" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/purple</item>
    </style>

    <style name="AppButton2" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/yellow</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TabLayout1" parent="Widget.Material3.TabLayout">
        <item name="tabMode">auto</item>
        <item name="tabIndicatorColor">@color/yellow</item>
    </style>

    <style name="Theme.ProjectQapacApp" parent="Base.Theme.ProjectQapacApp" />
</resources>