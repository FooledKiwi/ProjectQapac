<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProjectQapacApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/cream</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurface">@color/darkModeContent</item>
        <item name="colorOnSurfaceVariant">@color/darkGray</item>
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorSecondary">@color/purple_light</item>
        <item name="colorOnPrimary">@color/gray</item>

        <item name="android:windowSplashScreenIconBackgroundColor">@color/purple</item>
        <item name="materialButtonStyle">@style/AppButton1</item>
        <item name="editTextStyle">@style/EditText1</item>
    </style>

    <style name="ProfilePassenger">
        <item name="android:src">@drawable/icon_passenger</item>
    </style>

    <style name="textUsername">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>



    <style name="TextHourMinutesSeconds">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/purple_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppButton1" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/purple</item>
        <item name="background">@drawable/bg_rounded_all</item>
    </style>

    <style name="AppButton2" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:textColor">@color/black</item>
        <item name="background">@drawable/bg_rounded_all</item>
    </style>

    <style name="TabLayout1" parent="Widget.Material3.TabLayout">
        <item name="tabMode">auto</item>
        <item name="tabIndicatorColor">@color/yellow</item>
    </style>

    <style name="EditText1" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_rounded_all</item>
        <item name="backgroundTint">@color/white</item>
        <item name="textFillColor">@color/black</item>
        <item name="android:textColorHint">@color/darkGray</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="Theme.ProjectQapacApp" parent="Base.Theme.ProjectQapacApp" />
</resources>