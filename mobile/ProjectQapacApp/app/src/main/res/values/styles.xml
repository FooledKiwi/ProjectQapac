<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto">
    <style name="CircleImage">
        <item name="cornerSize">50%</item>
    </style>

    <style name="CircleImageSmall">
        <item name="cornerSize">25%</item>
    </style>

    <style name="headingOne">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="headingTwo">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="txtSubtitles">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="txtDescription">
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="CardTextstates">
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:padding">50dp</item>
        <item name="android:backgroundTint">@color/lightGray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="ImageDefault">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:width">60dp</item>
        <item name="android:height">60dp</item>
    </style>

    <style name="cardViewRoundedStyle" parent="CardView">
        <item name="cardCornerRadius">25dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardElevation">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>


</resources>