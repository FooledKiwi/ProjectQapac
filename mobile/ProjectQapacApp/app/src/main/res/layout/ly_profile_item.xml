<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvContentProfile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/cvProfile"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="?attr/colorSurface"
        android:layout_margin="15dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clText"
            android:backgroundTint="?attr/backgroundTint"
            android:layout_marginStart="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:backgroundTint="@color/white"
                android:orientation="vertical"
                android:id="@+id/llContentProfile"
                app:layout_constraintStart_toStartOf="@id/clText"
                app:layout_constraintEnd_toStartOf="@id/cvIconProfile"
                android:layout_marginStart="135dp"
                app:layout_constraintTop_toTopOf="@id/clText"
                app:layout_constraintBottom_toBottomOf="@id/clText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvFullNameProfile"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:textAlignment="textEnd"
                    tools:text="Sr. Luis Mejía Irigioín"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    style="@style/textUsername"
                    android:id="@+id/tvUsername"
                    tools:text="lmejia@unc.edu.pe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvHourCurrent"
                    style="@style/TextHourMinutesSeconds"
                    android:textSize="15sp"
                    tools:text="02/03/26 08:30:10 A.M."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/llContentProfile"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/cvIconProfile"
                    android:backgroundTint="@color/yellow"
                    android:layout_width="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/passenger_black"
                        style="@style/ProfilePassenger"/>


                </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="200dp"
        android:layout_marginTop="5dp"
        android:layout_width="140dp"
        android:layout_height="140dp">

        <ImageView
            android:id="@+id/img_profile"
            android:src="@drawable/profile_example"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>